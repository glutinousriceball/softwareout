    <!--获取菜单或权限-->
    <select id="selectAllPermission" parameterType="com.wjm.softwareout.system.vo.PermissionVo"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_permission
        <where>
            <!--
                根据id查询
                1.当前查询的如果是type = menu 的时候，会把当前菜单或其子菜单都查询出来
                2.当前查询的如果是type = permission 的时候，只会查询当前菜单下的所有权限点查询出来
            -->
            <if test="permissionVo.id != null">
                and (id = #{permissionVo.id} or pid = #{permissionVo.id})
            </if>
            <!--根据名称查询-->
            <if test="permissionVo.name != null">
                and name like concat("%",#{permissionVo.name},"%")
            </if>
            <!--根据类型type=menu or type=permission-->
            <if test="permissionVo.type != null">
                and type = #{permissionVo.type}
            </if>
            <!--是否可用-->
            <if test="permissionVo.available != null">
                and available = #{permissionVo.available}
            </if>
            <!--根据权限编码模糊查询-->
            <if test="permissionVo.percode != null">
                and percode like concat("%",#{permissionVo.percode},"%")
            </if>
        </where>
        order by ordernum
    </select>
    <!--计算是否存在相同菜单或者权限名称-->
    <select id="countMenuByPidAndName" parameterType="map" resultType="int">
        select count(1)
        from sys_permission
        where name = #{name}
        <if test="id != null">
            and id != #{id}
        </if>
        <if test="pId != null">
            and pid = #{pId}
        </if>
    </select>
    <!--计算菜单下子菜单或菜单下权限点的数量-->
    <select id="countMenuByIdAndType" parameterType="com.wjm.softwareout.system.vo.PermissionVo" resultType="int">
        select count(1)
        from sys_permission
        <where>
            <if test="permissionVo.id != null">
                pid = #{permissionVo.id}
            </if>
            <if test="permissionVo.type != null">
                and type = #{permissionVo.type}
            </if>
        </where>
    </select>
    <!--根据父级菜单ID查询子菜单-->
    <select id="selectAllChildMenuByPid" parameterType="map" resultType="com.wjm.softwareout.system.entity.Permission">
